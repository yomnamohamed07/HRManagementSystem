@model IEnumerable<userviewmodel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="mt-2">
    <form asp-action="Index" method="get" class="row offset-2">
        <div class="col-10">
            <input class=" form-control" placeholder="User`s Name" name="email" search required />

        </div>
        <div class="col-2">
            <input type="submit" class="btn btn-info" value="Search" />

        </div>
    </form>
</div>
<table class="table table-striped table-hover  mt-3">
    <thead>
        <tr>
            <td>@Html.DisplayNameFor(d => d.firstname)</td>
            <td>@Html.DisplayNameFor(d => d.lastname)</td>
            <td>@Html.DisplayNameFor(d => d.username)</td>
            <td>@Html.DisplayNameFor(d => d.email)</td>
            <td>@Html.DisplayNameFor(d => d.roles)</td>

            <td>Details</td>
            <td>Edit</td>
            <td>Delete</td>


        </tr>

    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.firstname</td>
                <td>@user.lastname</td>
                <td>@user.username</td>
                <td>@Html.DisplayFor(e => user.email)</td>
                <td>@string.Join(",", user.roles)</td>

                <partial name="_ButtonPartial" Model="@user.id"></partial>

            </tr>
        }
    </tbody>
</table>


